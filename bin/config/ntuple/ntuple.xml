<?xml version="1.0" encoding="UTF-8"?>
<config>


	<Task name="Cocktail Maker" type="CocktailNTupleMaker" config="" nodePath="cm" />
	<Logger color="true" globalLogLevel="info" />

	<SEED>0</SEED>
	<N>5000</N>
	<CHANNEL>eta_mumu</CHANNEL>
	<WEIGHT>0.025926</WEIGHT>

	<cm>
		<Logger color="true" globalLogLevel="info" />

		<output>
			<TFile url="MuonCocktail_{cm.ActiveChannels.ActiveChannel[0]:name}.root" />
		</output>

		<Make QA="true" />
		
		<ActiveChannels>
			<ActiveChannel name="{CHANNEL}" n="{N}" weight="{WEIGHT}" />
		</ActiveChannels>		

		<DecayChannels>
			<Include url="config/DecayChannels.xml" />
		</DecayChannels>

		<FunctionLibrary>
			<Include url="config/FunctionLibrary.xml" />
		</FunctionLibrary>

		<ParticleLibrary>
			<Include url="config/ParticleLibrary.xml" />
		</ParticleLibrary>

		<histograms>
			<Include url="../CocktailQAHistograms.xml" />
		</histograms>

		<KinematicFilters>
			<Include url="../STAR_KinematicAcceptance.xml" />
		</KinematicFilters>

	</cm>

	<bins>
		<Include url="../CocktailQABins.xml" />
	</bins>

</config>