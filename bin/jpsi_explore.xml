<?xml version="1.0" encoding="UTF-8"?>
<config>
	<Data name="d" treeName="ll" url="NTuple_jpsi_mumu.root" />

	<Transform>
		<Draw name="RapCut" data="d" draw="pt" select=" abs(y) < 0.5 " bins_x="bins_pt" />
		<Draw name="AccCut0" save_as="AccCut0" data="d" draw="pt" select=" abs(y) < 0.5 && abs( l1Eta ) < 0.5 && abs( l2Eta ) < 0.5" bins_x="bins_pt" />
		<Draw name="AccCut1" save_as="AccCut1" data="d" draw="pt" select=" abs(y) < 0.5 && abs( l1Eta ) < 0.5 && abs( l2Eta ) < 0.5 && l1PtRc>1.1 && l2PtRc>1.1" bins_x="bins_pt" />
	</Transform>

	<Transform>
		<Assign var="IRapCut" expr="RapCut->Integral()" />
		<Assign var="IAccCut0" expr="AccCut0->Integral()" />
		<Assign var="IAccCut1" expr="AccCut1->Integral()" />

		<Assign var="eAccCut0" expr="(AccCut0->Integral() / (float) RapCut->Integral())" />
		<Assign var="eAccCut1" expr="(AccCut1->Integral() / (float) RapCut->Integral())" />
	</Transform>

	<Plot>
		<Histo name="RapCut" draw="hp" logy="1" lc="#F00" optstat="0" />
		<Histo name="AccCut0" draw="same hp" lc="#00F"/>
		<Histo name="AccCut1" draw="same hp" lc="#000"/>

		<TLatex x="0.6" y="0.8" text="N = {IRapCut}" font="42" point="14" />
		<TLatex x="0.6" y="0.75" text="#varepsilon(|#eta^{#mu}|<0.5) = {eAccCut0}" font="42" point="14" />
		<TLatex x="0.6" y="0.7" text="#varepsilon(+p_{T}^{#mu}>1.1) = {eAccCut1}" font="42" point="14" />

		<Export url="plot_jpsi.pdf" />
	</Plot>


	<bins_pt min="0" max="10" width="0.001" />
</config>